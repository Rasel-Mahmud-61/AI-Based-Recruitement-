@model IEnumerable<AlBasedRecruiter.Models.Interview>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>interview </title>
    <style>
        /* Basic table styling */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
            text-align: left;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #e2e2e2;
        }
    </style>
</head>
<body>
    <h2>Interview Description</h2>
    <table>
        <thead>
            <tr>
                <th>InterviewId</th>
                <th>Name</th>
                
                <th>Email</th>
                <th>Resume</th>
                <th>InterviewDate</th>
                <th>Gender</th>
                <th>Recruiter</th>
                <th>JobPosition</th>
                <th>Score</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var applicant in Model)
            {
                <tr>
                    <td>@applicant.InterviewId</td>
                    <td>@applicant.Applicant?.Name</td>
                    <td>@applicant.Applicant?.Email</td>
                    <td>@applicant.Applicant?.Resume</td>
                    <td>@applicant.InterviewDate.ToShortDateString()</td>
                    <td>@applicant.Applicant?.Gender</td>
                    
                    <td>@applicant.Recruiter?.Name</td>  <!-- Show recruiter name -->
                    <td>@applicant.JobPosition?.Title</td>
                      <td>@applicant.InterviewScore</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
